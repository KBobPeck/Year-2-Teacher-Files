{
  "plugins": ["plugins/markdown"],
  "recurseDepth": 10,
  "source": {
    "include": "src",
    "includePattern": ".ts$",
    "excludePattern": "(node_modules/|docs)"
  },
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "template": "templates/default",
    "destination": "./docs/",
    "recurse": true
  }
}
